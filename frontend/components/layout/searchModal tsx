import React, { useEffect, useState } from 'react'

interface Shortcut {
  title: string
  description: string
}

const shortcuts: Shortcut[] = [
  { title: 'Dashboard', description: 'Go to Dashboard' },
  { title: 'Projects', description: 'View all projects' },
  { title: 'Create Project', description: 'Add a new project' },
  { title: 'Team', description: 'Manage team members' },
  { title: 'Reports', description: 'View reports' },
  { title: 'Settings', description: 'Open settings' },
]

const SearchModal: React.FC = () => {
  const [isOpen, setIsOpen] = useState(false)

  const handleKeyDown = (e: KeyboardEvent) => {
    if (e.ctrlKey && e.key.toLowerCase() === 'e') {
      e.preventDefault()
      setIsOpen(!isOpen)
    }
    if (e.key === 'Escape') {
      setIsOpen(false)
    }
  }

  useEffect(() => {
    window.addEventListener('keydown', handleKeyDown)
    return () => window.removeEventListener('keydown', handleKeyDown)
  }, [isOpen])

  if (!isOpen) return null

  return (
    <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50">
      <div className="bg-white dark:bg-gray-900 rounded-lg w-96 p-6 shadow-lg">
        <h2 className="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-4">
          Quick Actions
        </h2>
        <ul className="space-y-2 max-h-64 overflow-y-auto">
          {shortcuts.map((shortcut) => (
            <li
              key={shortcut.title}
              className="p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-800 cursor-pointer"
            >
              <span className="font-medium text-gray-700 dark:text-gray-300">
                {shortcut.title}
              </span>
              <p className="text-sm text-gray-500 dark:text-gray-400">
                {shortcut.description}
              </p>
            </li>
          ))}
        </ul>
      </div>
    </div>
  )
}

export default SearchModal
